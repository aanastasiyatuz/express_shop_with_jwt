{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Shop express API",
    "description": "Shop API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "AuthToken": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "The token for authentication"
    }
  },
  "security": [
    {
      "AuthToken": []
    }
  ],
  "paths": {
    "/account/register/": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Register",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/account/login/": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Get token",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/account/check/": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Check token",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/products/": {
      "get": {
        "tags": [
          "Product"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "page",
            "type": "integer"
          },
          {
            "name": "q",
            "in": "query",
            "required": false,
            "description": "search",
            "type": "string"
          }
        ],
        "summary": "Products list",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "properties": {
                "count": {
                  "type": "integer"
                },
                "page": {
                  "type": "integer"
                },
                "next": {
                  "type": "string"
                },
                "rows": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "image": {
                        "type": "string"
                      },
                      "createdAt": {
                        "type": "string"
                      },
                      "updatedAt": {
                        "type": "string"
                      },
                      "comments": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer"
                            },
                            "body": {
                              "type": "string"
                            },
                            "user": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "integer"
                                },
                                "email": {
                                  "type": "string"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Product"
        ],
        "summary": "Create product",
        "parameters": [
          {
            "name": "product",
            "in": "body",
            "schema": {
              "properties": {
                "title": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Product"
            }
          }
        }
      }
    },
    "/products/{id}/": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "product id",
          "type": "integer"
        }
      ],
      "get": {
        "tags": [
          "Product"
        ],
        "summary": "Product details",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "properties": {
                "id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                },
                "createdAt": {
                  "type": "string"
                },
                "updatedAt": {
                  "type": "string"
                },
                "comments": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "body": {
                        "type": "string"
                      },
                      "user": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "email": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Product"
        ],
        "summary": "Update product",
        "parameters": [
          {
            "name": "product",
            "in": "body",
            "schema": {
              "properties": {
                "title": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Product"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Product"
        ],
        "summary": "Delete product",
        "responses": {
          "204": {
            "description": "No Content"
          }
        }
      }
    },
    "/comments/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "product id",
          "type": "integer"
        }
      ],
      "post": {
        "tags": [
          "Comment"
        ],
        "summary": "Create comment",
        "parameters": [
          {
            "name": "comment",
            "in": "body",
            "schema": {
              "properties": {
                "body": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "patch":{
        "tags":["Comment"],
        "summary":"Update comment",
        "parameters":[
          {
            "name":"comment",
            "in":"body",
            "schema":{
              "properties":{
                "body":{
                  "type":"string"
                }
              }
            }
          }
        ],
        "responses":{
          "201":{
            "description":"Created"
          }
        }
      },
      "delete":{
        "tags":["Comment"],
        "summary":"Delete comment",
        "responses":{
          "204":{
            "description":"No Content"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "uniqueItems": true
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Product": {
      "required": [
        "title"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "Comment": {
      "required": [
        "body"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "uniqueItems": true
        },
        "body": {
          "type": "text"
        }
      }
    }
  }
}